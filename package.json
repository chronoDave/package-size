{
  "name": "@chronocide/package-size",
  "version": "0.0.1",
  "type": "module",
  "types": "dist/package-size.d.ts",
  "exports": {
    ".": {
      "import": "./dist/package-size.js",
      "require": "./dist/package-size.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*"
  ],
  "bin": "bin.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chronoDave/package-size.git"
  },
  "author": "Chronocide",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=20.16.0"
  },
  "scripts": {
