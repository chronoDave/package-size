{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",

    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "outDir": "./build",
    "declarationDir": "./dist"
  },
  "include": [
    "src",
    "test",
    "scripts",
    "eslint.config.js",
    "rollup.config.js"
  ]
}